<%= form_for @announcement, url: {action: "create"} do |f| %>
  <%= label_tag(:fname, "Enter First Name")%>
  <%= text_field_tag(:fname) %>
  <%= label_tag(:lname, "Enter Last Name")%>
  <%= text_field_tag(:lname) %>

  <%= f.label 'Receipent enter name goes here' %>
  <%= label_tag 'user[]', "Teams (Hold ctrl while clicking to select multiple teams)" %>
  <%= select_tag 'user', options_from_collection_for_select(@user.all_users, "id", "last_name"),
   multiple: true %>
  <%= f.label "Send via" %>
  <div class="check-box-group">
    <div class="check-box-group-item">
      <%= f.check_box :email%>  <%# figure out how to do validation %>
      <%= f.label :email, 'Email'%>
    </div>
    <div class="check-box-group-item">
      <%= f.check_box :sms%>
      <%= f.label :sms, 'SMS'%>
    </div>
  </div>
  <%= render 'shared/roles' %>
  <%= f.label :title, 'Title'%>
  <%= f.text_field :title %>
  <%= f.label 'Message' %>
  <%= f.text_area :content, required: true %>
  <div style="margin-top:1.5em;text-align:right;">
    <button class="button-default" onclick="toggleModal('new-announcement')">Cancel</button>
    <%= f.submit "Send Announcement", class: "button-primary"%>
  </div>
<% end %>
