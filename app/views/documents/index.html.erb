<h1>Documents</h1>
<div class="info-block-wrapper" style="margin-top:1em;">
    <div class="info-block">
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Date Uploaded</th>
                <th>Download</th>
            </tr>
            </thead>
            <tbody>
            <% @documents.each do |document| %>
                <tr>
                    <td><%= document.name %></td>
                    <td><%= document.created_at.strftime("%b %-d, %Y at %-I:%M%p") %></td>
                    <td><%= link_to 'Download Document', document.attachment_url, class: 'button-primary' %></td>
                </tr>
            <% end %>
            </tbody>
    </table>
  </div>
</div>
